<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_changepassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jtech.www.hide.changepassword">
    <ImageView

        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView4"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textClock2" />

    <TextClock
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:text="HIDE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/set"
        android:layout_marginTop="16dp" />

    <EditText
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/pass2"
        android:hint="Retype Password"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/pass1"
        android:layout_alignStart="@+id/pass1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/currpassword"
        android:hint="Current password"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorAccent"
        android:id="@+id/pass1"
        android:hint="Enter new Password"
        android:layout_below="@+id/currpassword"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="36dp" />

    <Button
        android:text="Change Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/pass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />


</RelativeLayout>
